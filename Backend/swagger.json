{
  "openapi": "3.0.0",
  "info": {
    "title": "PeakPT API",
    "version": "1.0.0",
    "description": "API for managing exercises and workouts"
  },
  "servers": [
    {
      "url": "http://localhost:5001",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/exercises": {
      "get": {
        "summary": "Get all exercises",
        "tags": ["Exercises"],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Exercise"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new exercise",
        "tags": ["Exercises"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Exercise"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Exercise created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Exercise"
                }
              }
            }
          }
        }
      }
    },
    "/api/exercises/{id}": {
      "get": {
        "summary": "Get exercise by ID",
        "tags": ["Exercises"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Exercise"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update exercise by ID",
        "tags": ["Exercises"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Exercise"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Exercise updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Exercise"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete exercise by ID",
        "tags": ["Exercises"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Exercise deleted successfully"
          }
        }
      }
    },
    "/api/workouts": {
      "get": {
        "summary": "Get all workouts",
        "tags": ["Workouts"],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Workout"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/workouts/{date}": {
      "get": {
        "summary": "Get workout by date",
        "tags": ["Workouts"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Workout"
                }
              }
            }
          }
        }
      }
    },
    "/api/workouts/{date}/exercises": {
      "get": {
        "summary": "Get exercise by date and name",
        "tags": ["Workouts"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "query",
            "name": "name",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Exercise"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete exercise by date and name",
        "tags": ["Workouts"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "query",
            "name": "name",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Exercise deleted successfully"
          }
        }
      }
    },
    "/api/workouts/{date}/exercises/{exerciseId}": {
      "get": {
        "summary": "Get exercise by date and ID",
        "tags": ["Workouts"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "path",
            "name": "exerciseId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Exercise"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete exercise by date and ID",
        "tags": ["Workouts"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "path",
            "name": "exerciseId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Exercise deleted successfully"
          }
        }
      }
    },
    "/api/workouts/{date}/exercises/{exerciseId}/sets": {
      "delete": {
        "summary": "Delete sets by date, exercise ID, and set IDs",
        "tags": ["Workouts"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "path",
            "name": "exerciseId",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "setIds",
            "required": true,
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Sets deleted successfully"
          }
        }
      }
    },
    "/api/workouts/{date}/exercises/byname/{exerciseName}/sets": {
      "delete": {
        "summary": "Delete sets by date, exercise name, and set IDs",
        "tags": ["Workouts"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "path",
            "name": "exerciseName",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "setIds",
            "required": true,
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Sets deleted successfully"
          }
        }
      },
      "put": {
        "summary": "Bulk update sets by date and exercise name",
        "tags": ["Workouts"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "path",
            "name": "exerciseName",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Set"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sets updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Exercise"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add new set to exercise",
        "tags": ["Workouts"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "path",
            "name": "exerciseName",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Set"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Set added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Exercise"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Exercise": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "sets": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Set"
            }
          }
        }
      },
      "Set": {
        "type": "object",
        "required": ["id", "reps", "weight"],
        "properties": {
          "id": {
            "type": "string"
          },
          "reps": {
            "type": "number"
          },
          "weight": {
            "type": "number"
          }
        }
      },
      "Workout": {
        "type": "object",
        "required": ["date", "name", "exercises"],
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "name": {
            "type": "string"
          },
          "exercises": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Exercise"
            }
          }
        }
      }
    }
  }
}