{
  "openapi": "3.0.0",
  "info": {
    "title": "PeakPT API",
    "version": "1.0.0",
    "description": "API for tracking workouts and exercises"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/workouts": {
      "get": {
        "summary": "Get all workouts",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Workout"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error reading workouts"
          }
        }
      }
    },
    "/workouts/{date}": {
      "get": {
        "summary": "Get workout by date",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date in YYYY-MM-DD format",
            "example": "2024-09-18"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Workout"
                }
              }
            }
          },
          "404": {
            "description": "Workout not found"
          },
          "500": {
            "description": "Error reading workouts"
          }
        }
      }
    },
    "/workouts/{date}/exercises": {
      "get": {
        "summary": "Get completed exercise by date and exercise name",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date in YYYY-MM-DD format",
            "example": "2024-09-18"
          },
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompletedExercise"
                }
              }
            }
          },
          "404": {
            "description": "Workout or exercise not found"
          },
          "500": {
            "description": "Error reading workouts"
          }
        }
      },
      "delete": {
        "summary": "Delete completed exercise by date and exercise name",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date in YYYY-MM-DD format",
            "example": "2024-09-18"
          },
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "400": {
            "description": "Invalid date format or missing exercise name"
          },
          "404": {
            "description": "Workout or exercise not found"
          },
          "500": {
            "description": "Error reading or writing workouts"
          }
        }
      }
    },
    "/workouts/{date}/exercises/{exerciseId}": {
      "get": {
        "summary": "Get completed exercise by date and exercise id",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date in YYYY-MM-DD format",
            "example": "2024-09-18"
          },
          {
            "name": "exerciseId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompletedExercise"
                }
              }
            }
          },
          "404": {
            "description": "Workout or exercise not found"
          },
          "500": {
            "description": "Error reading workouts"
          }
        }
      },
      "delete": {
        "summary": "Delete completed exercise by date and exercise id",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date in YYYY-MM-DD format",
            "example": "2024-09-18"
          },
          {
            "name": "exerciseId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "400": {
            "description": "Invalid date format"
          },
          "404": {
            "description": "Workout or exercise not found"
          },
          "500": {
            "description": "Error reading or writing workouts"
          }
        }
      }
    },
    "/workouts/{date}/exercises/{exerciseId}/sets": {
      "delete": {
        "summary": "Delete sets by date, exercise id, and set id(s)",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date in YYYY-MM-DD format",
            "example": "2024-09-18"
          },
          {
            "name": "exerciseId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "setIds": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No content"
          },
          "400": {
            "description": "Invalid date format or invalid setIds"
          },
          "404": {
            "description": "Workout or exercise not found"
          },
          "500": {
            "description": "Error reading or writing workouts"
          }
        }
      }
    },
    "/workouts/{date}/exercises/byname/{exerciseName}/sets": {
      "delete": {
        "summary": "Delete sets by date, exercise name, and set id(s)",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date in YYYY-MM-DD format",
            "example": "2024-09-18"
          },
          {
            "name": "exerciseName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "setIds": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No content"
          },
          "400": {
            "description": "Invalid date format or invalid setIds"
          },
          "404": {
            "description": "Workout or exercise not found"
          },
          "500": {
            "description": "Error reading or writing workouts"
          }
        }
      },
      "put": {
        "summary": "Bulk update sets by date, exercise name, and set id(s)",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date in YYYY-MM-DD format",
            "example": "2024-09-18"
          },
          {
            "name": "exerciseName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "updates": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "reps": {
                          "type": "integer",
                          "minimum": 1,
                          "description": "Number of repetitions (must be greater than 0)"
                        },
                        "weight": {
                          "type": "number"
                        }
                      },
                      "required": ["id"]
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompletedExercise"
                }
              }
            }
          },
          "400": {
            "description": "Invalid date format, invalid updates, or reps less than or equal to 0"
          },
          "404": {
            "description": "Workout or exercise not found"
          },
          "500": {
            "description": "Error reading or writing workouts"
          }
        }
      }
    },
    "/recover": {
      "get": {
        "summary": "Recover database to initial state",
        "responses": {
          "200": {
            "description": "Database recovered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error recovering database"
          }
        }
      }
    },
    "/exercises": {
      "get": {
        "summary": "Get all exercises",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Exercise"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error reading exercises"
          }
        }
      }
    },
    "/exercises/{id}": {
      "get": {
        "summary": "Get exercise by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Exercise"
                }
              }
            }
          },
          "404": {
            "description": "Exercise not found"
          },
          "500": {
            "description": "Error reading exercises"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Workout": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "name": {
            "type": "string"
          },
          "exercises": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CompletedExercise"
            }
          }
        }
      },
      "CompletedExercise": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "sets": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Set"
            }
          }
        }
      },
      "Set": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "reps": {
            "type": "integer"
          },
          "weight": {
            "type": "number"
          }
        }
      },
      "Exercise": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}